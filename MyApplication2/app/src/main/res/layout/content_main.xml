<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="205dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:showIn="@layout/app_bar_main"
    android:background="@mipmap/secdefault4">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/days_not_dead"
        android:id="@+id/daysSurvivedLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#753c5a"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/net_worth"
        android:id="@+id/netWorthLabel"
        android:layout_below="@+id/daysSurvivedLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#753c5a"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/happinessTierSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="203dp"
        android:layout_marginTop="78dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#753c5a"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/healthTierSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="203dp"
        android:layout_marginTop="118dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#753c5a"
        android:textSize="30sp" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/happinessBar"
        android:layout_width="200dp"
        android:layout_height="24dp"
        app:rcProgress="75"
        app:rcMax="100"
        app:rcRadius="20dp"
        app:rcBackgroundPadding="7dp"
        app:rcReverse="false"
        app:rcProgressColor="#a2c9ca"
        app:rcSecondaryProgress="100"


        app:rcBackgroundColor="#aaa191"
        app:rcSecondaryProgressColor="#85dbd9d5"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="1dp"/>
    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/healthBar"
        android:layout_width="200dp"
        android:layout_height="24dp"
        app:rcProgress="75"
        app:rcSecondaryProgress="100"
        app:rcMax="100"
        app:rcRadius="8dp"
        app:rcBackgroundPadding="7dp"
        app:rcReverse="false"
        app:rcProgressColor="#f79494"
        app:rcSecondaryProgressColor="#85dbd9d5"


        app:rcBackgroundColor="#aaa292"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="1dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/happinessIcon"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/happiness_icon1"
        android:background="@android:color/transparent"
        android:layout_marginTop="87dp"
        android:layout_marginLeft="1dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/healthIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/health_icon1"
        android:background="@android:color/transparent"
        android:layout_marginTop="126dp"
        android:layout_marginLeft="1dp" />

    <TextView
        android:id="@+id/highScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/daysSurvivedLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:text="Highscore: "
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#252525" />

